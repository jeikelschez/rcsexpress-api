          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Bancos"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Bancos"],
        "summary": "Crear Bancos",
        "description": "API para Crear un nuevo Banco",
        "requestBody": {
          "description": "Post object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Bancos"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Bancos"
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
