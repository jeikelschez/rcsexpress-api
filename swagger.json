        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Codigo del Banco",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Bancos"
