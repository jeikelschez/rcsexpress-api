        "tags": ["Bancos"],
        "summary": "Borrar Bancos",
        "description": "API para Borrar un Banco por su ID específico",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Codigo del Banco",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "cod_banco": {
                      "$ref": "#/components/schemas/Bancos/properties/cod_banco"
